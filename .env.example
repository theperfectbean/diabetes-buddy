# Diabetes Buddy Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration (Groq-only)
# =============================================================================

# Provider selection (default: groq)
LLM_PROVIDER=groq

# Groq API key (required)
GROQ_API_KEY=your_api_key_here

# Groq model selection (optional override)
# Default: groq/openai/gpt-oss-20b
GROQ_MODEL=groq/openai/gpt-oss-20b

# Optional: max retries and base delay for Groq retries
GROQ_MAX_RETRIES=3
GROQ_RETRY_BASE_DELAY=1

# Optional: enable prompt caching for Groq-supported models
GROQ_ENABLE_CACHING=false

# =============================================================================
# Embedding Configuration (local)
# =============================================================================

# Sentence-transformers model for local embeddings
# Example: all-mpnet-base-v2, all-MiniLM-L6-v2
LOCAL_EMBEDDING_MODEL=all-mpnet-base-v2

# Glucose Unit Configuration
# Supported values: mmol/L, mg/dL
# This determines how glucose values are stored and displayed
GLUCOSE_UNIT=mmol/L
