# Diabetes Buddy Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider selection (default: gemini)
# Options: gemini, litellm, openai, anthropic, ollama
LLM_PROVIDER=gemini

# Gemini API key (required for gemini/litellm providers)
GEMINI_API_KEY=your_api_key_here

# CRITICAL: Model name MUST use "gemini/" prefix for direct Google AI Studio API
# Without prefix, LiteLLM routes through Vertex AI with 10x lower rate limits!
# Correct:   gemini/gemini-2.5-flash (direct API, higher limits)
# Incorrect: gemini-2.5-flash (routes to Vertex AI, lower limits)
GEMINI_MODEL=gemini/gemini-2.5-flash

# PRIMARY_MODEL is used by LiteLLM for routing/fallbacks
# Example: PRIMARY_MODEL=gemini/gemini-2.5-flash
PRIMARY_MODEL=gemini/gemini-2.5-flash

# Optional: comma-separated fallback models (LiteLLM will try these on failure)
# Example: FALLBACK_MODELS=gpt-4o,claude-3-5-sonnet
FALLBACK_MODELS=

# =============================================================================
# Additional Provider API Keys (optional)
# =============================================================================

# Uncomment and set if using other providers
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Embedding Configuration
# =============================================================================

# If set to true, and GOOGLE_APPLICATION_CREDENTIALS is present, use remote Gemini/Vertex
# embeddings instead of the local `sentence-transformers` fallback. Default: false
USE_REMOTE_EMBEDDINGS=false

# =============================================================================
# Application Settings
# =============================================================================

# Glucose Unit Configuration
# Supported values: mmol/L, mg/dL
# This determines how glucose values are stored and displayed
GLUCOSE_UNIT=mmol/L
